<div class="chat_header">
  <div class = "left_header">
    <div class = "header_title">room</div>
  </div>
  <div class = "ridht_header">
    <div class = "header_bottom">
      <a href = "#">チャット終了</a>
    </div>
  </div>
</div>

<div class ="messages">
  <div class = "message">
    <div class = "upper_message">
      <div class = "message_user">太郎</div>
      <div class = "message_date">20200101(wed)</div>
    </div>
    <div class = "lower_message">
      <div class = "message_contents">こんにちは</div>
    </div>
  </div>
  <div class = "message">
    <div class = "upper_message">
      <div class = "message_user">二郎</div>
      <div class = "message_date">20200101(wed)</div>
    </div>
    <div class = "lower_message">
      <div class = "message_contents">こんばんは</div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form_input">
    <%= f.text_field :content, class: 'form_message', placeholder: 'type a message' %>
    <label class="form_image">
      <span class="image_file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form_submit' %>
<% end %>